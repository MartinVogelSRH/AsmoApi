<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AsmoMobile.SettingsPage"
             Title="Settings">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Vertical">
                <Label Text="Host:" />
                <Entry x:Name="ent_Host"></Entry>
            </StackLayout>
            <StackLayout Orientation="Vertical">
                <Label Text="Port:" />
                <Entry x:Name="ent_Port"></Entry>
            </StackLayout>
            <Button x:Name="btn_Save" Clicked="btn_Save_OnClicked" Text="Save"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>